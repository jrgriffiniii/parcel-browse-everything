{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "ignorePatterns": ["jest.config.ts", "dist/**/*js", "dist/**/*ts"],
  "overrides": [
    {
      "files": ["src/**/*.ts", "__tests__/**/*.ts"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["tsconfig.json"]
  },
  "rules": {}
}
